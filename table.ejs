<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tabela</title>
</head>
<body>

    <style>

        table {
            text-align: left; 
            border: 2px solid black;   
            border-collapse: collapse;
        }

        td, th {
            border: 2px solid black;
            padding: 2vh;
        }

    </style>

    <table>
        
        <thead>
            
            <% header.forEach(col =>{ %>
                <th>
                    <%- col %>
                </th>
            <% }) %>

        </thead>

        <tbody>

            <% rows.forEach(row =>{ %>
                <tr>
                    <% row.forEach(element => { %>
                        <td>
                            <%- element %>
                        </td>
                    <% }) %>
                </tr>
            <% }) %>
                

        </tbody>

    </table>
    
</body>
</html>